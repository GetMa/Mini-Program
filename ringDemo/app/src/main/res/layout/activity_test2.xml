<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".activity.TestActivity2">

    <!-- 顶部标题栏 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试DEMO"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <!-- 调试信息输出区域（占页面一半） -->
    <TextView
        android:id="@+id/tv_result2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="数据区域"
        android:scrollbars="vertical"
        android:padding="10dp"
        android:lineSpacingExtra="5dp"
        android:textSize="10sp"
        android:textColor="@color/colorPrimaryDark"/>

    <!-- 按钮容器（ScrollView，占页面一半，支持滚动） -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:scrollbarStyle="insideOverlay">

        <!-- ScrollView唯一子View：垂直LinearLayout承载所有按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 第一行按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <Button
                    android:id="@+id/bt_set_HID"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="设置HID"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
                <Button
                    android:id="@+id/bt_get_HID"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="获取HID"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
            </LinearLayout>

            <!-- 第二行按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <Button
                    android:id="@+id/bt_get_HID_code"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="HID功能"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
                <Button
                    android:id="@+id/bt_set_audio_type"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="设置音频格式"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
            </LinearLayout>

            <!-- 第三行按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <Button
                    android:id="@+id/bt_get_audio_type"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="获取音频格式"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
                <Button
                    android:id="@+id/bt_temp_test"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="温度测量"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
            </LinearLayout>

            <!-- 第四行按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <Button
                    android:id="@+id/bt_get_rssi"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="获取RSSI"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
                <Button
                    android:id="@+id/bt_heart"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="获取心率"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
            </LinearLayout>

            <!-- 第五行按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <Button
                    android:id="@+id/bt_app_bind"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="二代绑定指令"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
                <Button
                    android:id="@+id/bt_connect"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="二代连接指令"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
            </LinearLayout>

            <!-- 第六行按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <Button
                    android:id="@+id/bt_refresh"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="二代刷新指令"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
                <Button
                    android:id="@+id/bt_calculate_sleep"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="睡眠逻辑"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
            </LinearLayout>

            <!-- 第七行按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <Button
                    android:id="@+id/bt_sleep_sevice"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="云端计算睡眠"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
                <Button
                    android:id="@+id/bt_ecg_demo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="心电图样例"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
            </LinearLayout>

            <!-- 第八行按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <Button
                    android:id="@+id/btn_upload_history"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="上传历史数据"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
                <Button
                    android:id="@+id/btn_ota"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="云端ota升级"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
            </LinearLayout>

            <!-- 第九行按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <Button
                    android:id="@+id/bt_file_list"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="获取文件列表"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
                <Button
                    android:id="@+id/bt_file_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="解析文件"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
            </LinearLayout>

            <!-- 第十行按钮（单个全屏） -->
            <Button
                android:id="@+id/bt_test2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="跳转到奋达定制页"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:background="@drawable/button_bg_state"
                android:minHeight="0dp"
                android:paddingVertical="6dp"
                android:paddingHorizontal="4dp"
                android:singleLine="false"
                android:gravity="center"/>

            <!-- 第十一行按钮（单个全屏） -->
            <Button
                android:id="@+id/bt_unpair"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="解除绑定"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:background="@drawable/button_bg_state"
                android:minHeight="0dp"
                android:paddingVertical="6dp"
                android:paddingHorizontal="4dp"
                android:singleLine="false"
                android:gravity="center"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>