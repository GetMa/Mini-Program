<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".activity.TestActivity">

    <!-- 顶部标题栏 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试DEMO"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连接"
            android:textSize="10sp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <!-- 调试信息输出区域（占页面一半） -->
    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:lineSpacingExtra="5dp"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:text="数据区域"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="10sp" />

    <!-- 按钮容器（ScrollView，占页面一半，支持滚动） -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:scrollbarStyle="insideOverlay">

        <!-- ScrollView唯一子View：垂直LinearLayout承载所有按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 第一行按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <Button
                    android:id="@+id/bt_sys_control"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="蓝牙信号"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
                <Button
                    android:id="@+id/bt_sync_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="同步时间"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
                <Button
                    android:id="@+id/bt_read_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="读取时间"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
            </LinearLayout>

            <!-- 第二行按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <Button
                    android:id="@+id/bt_set_file"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="设置路径"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
                <Button
                    android:id="@+id/bt_set_BlueTooth_Name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="设置蓝牙名称"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
                <Button
                    android:id="@+id/bt_start_update"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="开始升级"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
            </LinearLayout>

            <!-- 第三行按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <Button
                    android:id="@+id/bt_battery"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="获取电量"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
                <Button
                    android:id="@+id/bt_clean_history"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="清除历史数据"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
                <Button
                    android:id="@+id/bt_version"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="版本信息"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
            </LinearLayout>

            <!-- 第四行按钮（单个全屏） -->
            <Button
                android:id="@+id/bt_clear_local_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="清除本地历史记录"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:background="@drawable/button_bg_state"
                android:minHeight="0dp"
                android:paddingVertical="6dp"
                android:paddingHorizontal="4dp"
                android:singleLine="false"
                android:gravity="center"/>

            <!-- 第五行按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <Button
                    android:id="@+id/bt_clear_step"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="清除步数"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
                <Button
                    android:id="@+id/bt_step"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="获取步数"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
                <Button
                    android:id="@+id/bt_calculate_deplete"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="计算消耗"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
            </LinearLayout>

            <!-- 第六行按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <Button
                    android:id="@+id/bt_collection"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="采集周期"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
                <Button
                    android:id="@+id/bt_delete_data"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="删除数据库"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
                <Button
                    android:id="@+id/bt_get_collection"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="获取周期"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
            </LinearLayout>

            <!-- 第七行按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <Button
                    android:id="@+id/bt_heart"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="心率测量"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
                <Button
                    android:id="@+id/bt_stop_heart"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="停止心率"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
                <Button
                    android:id="@+id/bt_blood_oxygen"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="血氧测量"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
            </LinearLayout>

            <!-- 第八行按钮（4个按钮） -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <Button
                    android:id="@+id/bt_read_log"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="读取全部记录"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
                <Button
                    android:id="@+id/bt_start_audio"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="语音录制"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
                <Button
                    android:id="@+id/bt_stop_audio"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="停止录制"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
                <Button
                    android:id="@+id/bt_blood_stress"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="血压测量"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
            </LinearLayout>

            <!-- 第九行按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <Button
                    android:id="@+id/bt_start_play"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="开始游戏"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
                <Button
                    android:id="@+id/bt_stop_play"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="结束游戏"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
            </LinearLayout>

            <!-- 第十行按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <Button
                    android:id="@+id/bt_start_6_zhou"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="6轴传感器实时数据"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
                <Button
                    android:id="@+id/bt_stop_6_zhou"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="停止上传6轴数据"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
            </LinearLayout>

            <!-- 第十一行按钮（单个） -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <Button
                    android:id="@+id/bt_jump_page2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="跳转页面2"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
            </LinearLayout>

            <!-- 第十二行按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <Button
                    android:id="@+id/bt_jump_pageFile"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="特定戒指文件系统"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
                <Button
                    android:id="@+id/bt_jump_pageCollection"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="特定戒指周期采集"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
            </LinearLayout>

            <!-- 第十三行按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <Button
                    android:id="@+id/bt_jump_goMore"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="GoMore睡眠算法"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
                <Button
                    android:id="@+id/bt_jump_historyTemp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="特定戒指历史温度"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
            </LinearLayout>

            <!-- 第十四行按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <Button
                    android:id="@+id/bt_view_history"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="查看历史数据"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
                <Button
                    android:id="@+id/bt_export_history"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="导出历史数据"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg_state"
                    android:minHeight="0dp"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="4dp"
                    android:singleLine="false"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>