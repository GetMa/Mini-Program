.home-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 24rpx;
  padding-bottom: 120rpx;
}

/* 顶部问候语 */
.home-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 36rpx;
  color: #fff;
}

.header-date {
  font-size: 28rpx;
  opacity: 0.9;
}

.header-greeting {
  font-size: 44rpx;
  font-weight: bold;
  margin-top: 12rpx;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  margin-top: 8rpx;
}

/* 章节标题 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

/* 快捷功能 */
.quick-actions {
  display: flex;
  gap: 16rpx;
  margin-bottom: 36rpx;
}

.quick-action-item {
  flex: 1;
  background-color: #fff;
  border-radius: 24rpx;
  padding: 40rpx 24rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.action-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.action-subtitle {
  font-size: 26rpx;
  color: #999;
}

/* 健康指标 */
.health-metrics {
  margin-bottom: 36rpx;
}

.metric-card {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.metric-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.metric-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}

.metric-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

/* 测量时间完整展示 yyyy-MM-dd HH:mm:ss，往左对齐，可换行显示完全 */
.metric-time {
  font-size: 24rpx;
  color: #999;
  max-width: 100%;
  overflow: visible;
  text-overflow: clip;
  white-space: normal;
  word-break: break-all;
  text-align: left;
  margin-top: 4rpx;
}

/* 每日活动 */
.activity-card {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 36rpx;
  margin-bottom: 36rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.activity-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.activity-content {
  display: flex;
  justify-content: space-around;
}

.activity-item {
  text-align: center;
}

.activity-label {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.activity-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 睡眠 */
.sleep-card {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 36rpx;
  margin-bottom: 36rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.sleep-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.sleep-value {
  font-size: 28rpx;
  color: #999;
}

/* 查看检测报告按钮 */
.report-button {
  background: linear-gradient(135deg, #FF5F15 0%, #FF8C42 100%);
  color: #fff;
  text-align: center;
  padding: 32rpx;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(255, 95, 21, 0.3);
}

/* 测量进度弹窗 */
.measurement-dialog {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  width: 600rpx;
  box-sizing: border-box;
}

.dialog-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

.dialog-progress {
  margin-bottom: 32rpx;
}

.progress-bar {
  width: 100%;
  height: 16rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.progress-fill {
  height: 100%;
  background-color: #FF5F15;
  border-radius: 8rpx;
  transition: width 0.3s;
}

.progress-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.dialog-tip {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}
