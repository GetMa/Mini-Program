.health-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 24rpx;
  padding-bottom: 120rpx;
}

.health-header {
  margin-bottom: 32rpx;
}

.health-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.health-subtitle {
  font-size: 26rpx;
  color: #999;
  margin-top: 8rpx;
}

.health-card {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.body-battery-card {
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.card-value {
  font-size: 32rpx;
  color: #666;
}

.card-subtitle {
  font-size: 28rpx;
  color: #999;
  margin-top: 12rpx;
  text-align: center;
}

.health-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.health-grid-item {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  height: 280rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.grid-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.grid-value {
  font-size: 28rpx;
  color: #666;
  margin-top: 16rpx;
}

.history-card,
.collection-card {
  text-align: center;
}

.measurement-dialog {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  width: 600rpx;
  box-sizing: border-box;
}

.dialog-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

.dialog-progress {
  margin-bottom: 32rpx;
}

.progress-bar {
  width: 100%;
  height: 16rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.progress-fill {
  height: 100%;
  background-color: #FF5F15;
  border-radius: 8rpx;
  transition: width 0.3s;
}

.progress-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.dialog-tip {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}
